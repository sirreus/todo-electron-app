{
  "name": "my-react-ts-app",
  "version": "0.1.0",
  "private": true,
  "description": "Demo electron app based on React+TS",
  "author": "kirill.egorov",
  "license": "UNLICENSED",
  "build": {
    "appId": "com.demo.app",
    "productName": "DemoApp",
    "files": [
      "src/*",
      "public/electron.js",
      "public/index.html",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.demo-app.example"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint ./src/* && prettier --check ./src/*",
    "clean": "rm -rf ./build && rm -rf ./dist",
    "ts:compile": "tsc public/electron.ts",
    "electron:build": "electron-builder",
    "build": "npm run clean && npm run react:build && npm run electron:build",
    "go:react": "cross-env BROWSER=none npm run react:start",
    "go:electron": "wait-on http://localhost:3000 && npm run ts:compile && electron .",
    "go": "concurrently \"npm:go:*\""
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.54",
    "@types/react": "^16.9.45",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron-is-dev": "^1.2.0",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "typescript": "^3.7.5",
    "wait-on": "^5.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "electron": "^9.2.0",
    "electron-builder": "^22.8.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^10.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.1",
    "eslint-plugin-react-hooks": "^4.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
